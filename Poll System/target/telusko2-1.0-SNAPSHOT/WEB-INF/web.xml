<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>landing_page</servlet-name>
        <servlet-class>presentation.StartingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>landing_page</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>voted</servlet-name>
        <servlet-class>presentation.toDelete.VotedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>voted</servlet-name>
        <url-pattern>/voted</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>vote</servlet-name>
        <servlet-class>presentation.VoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>vote</servlet-name>
        <url-pattern>/vote</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>Poll Manager</servlet-name>
        <servlet-class>presentation.PollManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Poll Manager</servlet-name>
        <url-pattern>/pollManager</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>State Manager</servlet-name>
        <servlet-class>presentation.StateManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>State Manager</servlet-name>
        <url-pattern>/state_manager</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Download Results</servlet-name>
        <servlet-class>presentation.DownloadResultsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Download Results</servlet-name>
        <url-pattern>/download_results</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Log In</servlet-name>
        <servlet-class>presentation.LogInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Log In</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Polls</servlet-name>
        <servlet-class>presentation.PollServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Polls</servlet-name>
        <url-pattern>/polls</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UManager</servlet-name>
        <servlet-class>presentation.UserManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UManager</servlet-name>
        <url-pattern>/umanager</url-pattern>
    </servlet-mapping>

</web-app>
